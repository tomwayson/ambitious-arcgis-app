<div class="container">

  <!-- navbar -->
  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <div class="navbar-header">
        <span class="navbar-brand">Ambitious ArcGIS App</span>
      </div>
      <ul class="nav navbar-nav">
        {{#active-link}}
          {{link-to "Home" "index"}}
